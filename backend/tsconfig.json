{
  "compilerOptions": {
    "target": "ES2020", // Supports async/await, optional chaining, etc.
    "module": "CommonJS", // Use CommonJS for Node backend
    "lib": [
      "ES2020"
    ], // Include modern JS features
    "moduleResolution": "node", // Resolve node-style modules
    "esModuleInterop": true, // ✅ Allow default import of CommonJS modules (e.g., jwt)
    "allowSyntheticDefaultImports": true, // Allow default-style imports without breaking
    "resolveJsonModule": true, // Enable importing JSON config files
    "strict": true, // Enforce all strict type checks
    "forceConsistentCasingInFileNames": true, // Avoid casing-related issues
    "skipLibCheck": true, // ✅ Ignore .d.ts from node_modules (e.g., jwt overloads)
    "outDir": "dist", // Compiled output folder
    "rootDir": "src", // Your TypeScript source code folder
    "baseUrl": ".", // Optional for absolute paths
    "noEmitOnError": true // Prevent JS output if there are TS errors
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}